<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">

    </style>

    <style name="tab_text">

    </style>

    <style name="tool_bar">
        <item name="android:textColor">@color/color_toolbar_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_edit_text">
        <item name="android:textColorHint">@color/color_login_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="register_text">
        <item name="android:textColor">@color/color_register_text_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="register_edit_text">
        <item name="android:textColorHint">@color/color_login_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
    </style>
    <!--HomeFragment-->
    <style name="hf_store_text">
        <item name="android:textColor">@color/color_home_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hf_title_text">
        <item name="android:textColor">@color/color_hf_title_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hf_banner_title_text">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/title_bg_blue</item>
    </style>

    <style name="hf_banner_center_title_text">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hf_standard_title_text">
        <item name="android:textColor">@color/color_hf_stad_title_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="hf_standard_text">
        <item name="android:textColor">@color/color_hf_stad_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="hf_nb_text">
        <item name="android:textColor">@color/color_home_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="hf_article_text_title">
        <item name="android:textColor">@color/color_home_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="hf_article_text_content">
        <item name="android:textColor">@color/color_hf_article_content_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="hf_article_text_info">
        <item name="android:textColor">@color/color_hf_article_info_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
    </style>
    <!--KnowledgeFragment-->
    <style name="kf_text_title" parent="hf_article_text_title"/>
    <style name="kf_text_info" parent="hf_article_text_content"/>
    <!--DBDetail Activity-->
    <style name="db_detail_text" parent="hf_standard_text"/>
</resources>
