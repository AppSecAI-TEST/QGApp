<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title_root_search"
    android:layout_width="match_parent"
    android:layout_height="49dp">

    <ImageView
        android:id="@+id/im_back_arrow_search"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/nav_back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline32"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_db_detail_search"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rect_frame_blue_no_radiu"
        android:paddingLeft="10dp"
        app:layout_constraintVertical_bias="0.533"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_db_detail_search"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/im_back_arrow_search"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/iv_db_detail_search"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/rect_blue_no_radiu"
        android:src="@drawable/icon_search_white"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/et_db_detail_search"
        app:layout_constraintBottom_toBottomOf="@+id/et_db_detail_search"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/guideline33"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline32"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline33"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84"/>
</android.support.constraint.ConstraintLayout>
