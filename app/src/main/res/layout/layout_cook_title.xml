<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_cook_info_cover"
        android:layout_width="112dp"
        android:layout_height="152dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        fresco:placeholderImage="@color/color_bottom_divider"
        fresco:actualImageScaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline35"/>

    <TextView
        android:id="@+id/tv_cook_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_book_title_holder"
        style="@style/kdb_book_detail_text_title"
        app:layout_constraintTop_toTopOf="@+id/iv_cook_info_cover"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_cook_info_cover"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/tv_cook_info_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_source_format"
        style="@style/kdb_book_detail_text_book_info"
        app:layout_constraintLeft_toLeftOf="@+id/tv_cook_info_title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cook_info_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="16dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline35"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        tools:layout_editor_absoluteY="170dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_book_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guideline35"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>