<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_master_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_toolbar_no_collect"/>
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/empty_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tb_master_info"
        android:background="@color/color_bottom_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_master_info"
        android:layout_width="@dimen/master_info_iv_width"
        android:layout_height="@dimen/master_info_iv_height"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/empty_view1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        fresco:placeholderImage="@color/color_bottom_divider"
        fresco:actualImageScaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_master_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/master_info_text_blue"
        tools:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_master_info"
        app:layout_constraintLeft_toLeftOf="@+id/iv_master_info"
        app:layout_constraintRight_toRightOf="@+id/iv_master_info"/>

    <TextView
        android:id="@+id/tv_master_info_product_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/master_info_text"
        android:text="@string/text_master_product"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_master_info_name"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_master_info_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        tools:text="@string/text_book_content_holder"
        style="@style/master_info_text_gray"
        app:layout_constraintTop_toTopOf="@+id/tv_master_info_product_holder"
        app:layout_constraintLeft_toRightOf="@+id/tv_master_info_product_holder"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@color/color_bottom_divider"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_master_info_product"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <View
            android:id="@+id/empty_view2"
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@color/color_login_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_master_info_content_title"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_master_info_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_master_person_info"
            style="@style/cook_info_item_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <View
            android:id="@+id/empty_view3"
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@color/color_login_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_master_info_content_title"
            android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_master_info_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left"
        style="@style/master_info_text"
        tools:text="@string/text_book_content_holder"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"/>

    <include layout="@layout/layout_loading"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>