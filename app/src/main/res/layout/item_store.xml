<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_hf_head_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hf_store_root_height">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_store"
        android:layout_width="@dimen/hf_store_image_size"
        android:layout_height="@dimen/hf_store_image_size"
        fresco:placeholderImage="@drawable/holder_circle_image"
        fresco:actualImageScaleType="fitXY"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_knowledge_store"
        style="@style/hf_store_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_store"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>