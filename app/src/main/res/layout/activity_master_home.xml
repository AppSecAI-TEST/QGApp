<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_master_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_title_root"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <ImageView
                android:id="@+id/im_back_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="33dp"
                android:src="@drawable/nav_back"
                />

            <TextView
                android:id="@+id/tv_title"
                style="@style/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/im_back_arrow"
                android:layout_toStartOf="@+id/iv_collect"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                tools:text="@string/app_name"/>

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="33dp"
                android:clickable="true"
                android:src="@drawable/icon_collect"
                android:visibility="invisible"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/empty_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_master_home"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_master_home_banner"
        android:layout_width="0dp"
        android:layout_height="155dp"
        app:layout_constraintTop_toBottomOf="@+id/empty_view1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        fresco:placeholderImage="@color/color_home_bg"
        fresco:actualImageScaleType="fitCenter"/>

    <EditText
        android:id="@+id/et_master_home_search"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/rect_frame_blue_no_radiu"
        android:paddingStart="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_master_home_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline35"
        />

    <ImageView
        android:id="@+id/iv_master_home_search"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/rect_blue_no_radiu"
        android:src="@drawable/icon_search_white"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@+id/et_master_home_search"
        app:layout_constraintBottom_toBottomOf="@+id/et_master_home_search"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline35"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline35"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.79"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="304dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_master_home_indicator"
        android:layout_width="8dp"
        android:layout_height="9dp"
        fresco:placeholderImage="@drawable/indicator_yellow"
        app:layout_constraintLeft_toLeftOf="@+id/et_master_home_search"
        app:layout_constraintTop_toTopOf="@+id/tv_master_home_list_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_master_home_list_title"
        />

    <TextView
        android:id="@+id/tv_master_home_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_article_title_holder"
        android:gravity="center_vertical"
        style="@style/dbres_text_title"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_master_home_search"
        app:layout_constraintLeft_toRightOf="@+id/iv_master_home_indicator"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline35"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_master_home_getall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_get_all"
        style="@style/dbres_text_blue"
        app:layout_constraintLeft_toLeftOf="@+id/guideline35"
        app:layout_constraintTop_toTopOf="@+id/tv_master_home_list_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_master_home_list_title"
        />

    <View
        android:id="@+id/empty_view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_master_home_list_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_master_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/empty_view2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"/>

</android.support.constraint.ConstraintLayout>