<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_title_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hf_item_title_root_height">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_title"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_title"
        android:layout_marginRight="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        fresco:placeholderImage="@drawable/title_icon_standard"
        fresco:actualImageScaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_new_standard"
        style="@style/hf_title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>