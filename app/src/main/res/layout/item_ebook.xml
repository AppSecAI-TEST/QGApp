<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_ebook"
    android:layout_width="match_parent"
    android:layout_height="@dimen/db_res_book_root_height"
    android:background="@color/color_white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_ebook"
        android:layout_width="@dimen/db_res_book_icon_width"
        android:layout_height="@dimen/db_res_book_icon_height"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:placeholderImage="@color/color_bottom_divider"
        fresco:actualImageScaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_item_ebook_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        tools:text="@string/text_database_food"
        android:lines="2"
        style="@style/db_res_text_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_ebook"
        app:layout_constraintTop_toTopOf="@+id/iv_item_ebook"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/tv_item_ebook_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:lines="4"
        android:ellipsize="end"
        tools:text="@string/text_book_content_holder"
        style="@style/db_res_text_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_ebook"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_ebook_title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        android:id="@+id/db_res_guideline"/>

    <TextView
        android:id="@+id/tv_item_ebook_price_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_price2"
        android:lines="1"
        android:ellipsize="end"
        style="@style/ebook_item_price"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_ebook_info"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_ebook_info"
        app:layout_constraintRight_toLeftOf="@+id/guideline34"
        android:layout_marginRight="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline34"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>

    <TextView
        android:id="@+id/tv_item_ebook_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/ebook_item_price_red"
        tools:text="$55.15"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline34"
        app:layout_constraintTop_toTopOf="@+id/tv_item_ebook_price_holder"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_ebook_price_holder"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintVertical_bias="0.6"/>

</android.support.constraint.ConstraintLayout>