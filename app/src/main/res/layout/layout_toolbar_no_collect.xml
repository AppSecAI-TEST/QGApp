<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title_root"
    android:layout_width="match_parent"
    android:layout_height="59dp">

    <ImageView
        android:id="@+id/im_back_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/nav_back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        tools:text="@string/app_name"
        android:lines="1"
        android:ellipsize="end"
        style="@style/tool_bar"
        app:layout_constraintLeft_toRightOf="@+id/im_back_arrow"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline36"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.5"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline36"
        android:orientation="vertical"
        app:layout_constraintGuide_end="57dp"/>

</android.support.constraint.ConstraintLayout>
