<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_home_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_hf"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/iv_hf_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/nav_search_white"
            android:scaleType="centerInside"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/toolbar_home_title"
            style="@style/tool_bar"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="55dp"/>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/color_bottom_divider"
        android:id="@+id/empty_view2"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar_hf"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:background="@color/color_white"/>

</android.support.constraint.ConstraintLayout>