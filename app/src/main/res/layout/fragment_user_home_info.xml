<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_home_bg">
    <LinearLayout
        android:id="@+id/root_user_home_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/my_fragment_line_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_user_home_name_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            style="@style/user_home_text_gray"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_user_home_name"
            style="@style/user_home_text_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_my_center_res_indicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="16dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/arrow_right_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/root_user_home_contact_phone"
        android:layout_width="0dp"
        android:layout_height="@dimen/my_fragment_line_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/root_user_home_info">

        <TextView
            android:id="@+id/tv_user_home_phone_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_phone"
            style="@style/user_home_text_gray"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_user_home_phone"
            style="@style/user_home_text_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_my_center_setting_indicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="16dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/arrow_right_gray"/>
    </LinearLayout>
    <View
        android:id="@+id/empty_view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/root_user_home_contact_phone"/>

    <LinearLayout
        android:id="@+id/root_user_home_contact_email"
        android:layout_width="0dp"
        android:layout_height="@dimen/my_fragment_line_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_view3">

        <TextView
            android:id="@+id/tv_user_home_email_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_email"
            style="@style/user_home_text_gray"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_user_home_email"
            style="@style/user_home_text_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_my_center_help_indicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="16dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/arrow_right_gray"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>