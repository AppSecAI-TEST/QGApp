    android:id="@+id/hf_item_nb_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hf_item_nb_root_height"
    android:background="@color/color_white"
    android:layout_marginBottom="@dimen/hf_hot_imgs_root_mTop_mBottom">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_nb"
        android:layout_width="0dp"
        android:layout_height="0dp"
